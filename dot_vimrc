set textwidth=79 
set shiftwidth=4
set tabstop=4
set expandtab
set softtabstop=4
set shiftround
set autoindent
set number
set colorcolumn=90

"remapping
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
:imap jj <Esc>
:map Z ZZ  
:map <CR> <Leader>
:map <Space> :

"highlight line and column
:hi CursorLine   cterm=NONE ctermbg=darkblue ctermfg=white guibg=darkred guifg=white
:hi CursorColumn cterm=NONE ctermbg=darkblue ctermfg=white guibg=darkred guifg=white
:nnoremap <Leader>c :set cursorline! cursorcolumn!<CR>

"refresh vimrc
map <leader>s :source ~/.vimrc<CR>
set hidden
set history=100

"cancel search highlighting using esc key
nnoremap <silent> <Esc> :nohlsearch<Bar>:echo<CR>

"open previous file
nnoremap <leader><leader> :e#<CR>

"show matchiing parenthasis
set showmatch

